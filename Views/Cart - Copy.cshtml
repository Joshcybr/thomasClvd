<style>
    body {
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        min-height: 100vh;
        margin: 0;
        background-color: #f4f4f4;
    }

    .gallery {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        justify-content: center;
        max-width: 1000px;
        margin: 20px;
    }

    .gallery-item {
        flex: 1 1 calc(33.333% - 20px);
        box-sizing: border-box;
        position: relative;
        margin: 10px;
        overflow: hidden;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
    }

        .gallery-item img {
            width: 100%;
            height: auto;
            object-fit: cover;
            transition: transform 0.3s;
            border-bottom: 1px solid #ddd; /* To separate the image from the info */
        }

            .gallery-item img:hover {
                transform: scale(1.05);
            }

    .gallery-item-info {
        width: 100%;
        padding: 10px;
        background: rgba(0, 0, 0, 0.6);
        color: white;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .price {
        font-size: 1.2em;
        font-weight: bold;
    }

    .add-to-cart {
        padding: 5px 10px;
        background: #ff5722;
        border: none;
        color: white;
        cursor: pointer;
        border-radius: 4px;
        transition: background 0.3s;
    }

        .add-to-cart:hover {
            background: #e64a19;
        }
</style>
